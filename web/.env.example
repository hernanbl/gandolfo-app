# Variables de entorno para Gandolfo Web
# Copia este archivo como .env y configura los valores reales

# Puerto del servidor (Render usa PORT=10000)
PORT=3000

# Entorno de ejecución
NODE_ENV=production

# SendGrid API Key (para envío de emails)
SENDGRID_API_KEY=tu_sendgrid_api_key_aqui

# Email de origen para notificaciones
FROM_EMAIL=noreply@gandolfo.app

# URLs de la aplicación
VITE_API_URL=http://localhost:3000/api
VITE_APP_URL=http://localhost:3000

# WhatsApp Integration (si se usa)
VITE_WHATSAPP_NUMBER=+1234567890

